generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Boulder {
  id         String   @id @default(uuid())
  name       String
  city       String
  sector     String
  difficulty Int
  ascents    Int
  CreatedAt  DateTime @default(now())
  UpdatedAt  DateTime @updatedAt
  ascentions Ascent[]

  @@map("Boulders")
}

model User {
  id        String   @id @default(uuid())
  type      Type     @default(BASIC)
  name      String
  email     String   @unique
  password  String
  score     Int
  CreatedAt DateTime @default(now())
  UpdatedAt DateTime @updatedAt
  ascents   Ascent[]

  @@map("Users")
}

model Ascent {
  id        String   @id @default(uuid())
  userId    String
  boulderId String
  CreatedAt DateTime @default(now())
  UpdatedAt DateTime @updatedAt
  boulder   Boulder  @relation(fields: [boulderId], references: [id])
  User      User     @relation(fields: [userId], references: [id])

  @@map("Ascents")
}

enum Type {
  BASIC
  MASTER
}
